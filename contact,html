  <script>
    (function () {
      emailjs.init("i4-xLzASoKYkrI1wZ"); // your public key
    })();

    document.getElementById('contact-form').addEventListener('submit', function (event) {
      event.preventDefault();

      emailjs.sendForm('service_tur6g6t', 'template_o786ilk', this)
        .then(() => {
          window.location.href = "https://www.snehvastra.store/thank-you.html";
        }, (error) => {
          alert('❌ Failed to send message. Please try again later.');
          console.error('EmailJS Error:', error);
        });
    });
